<%- include('../partials/head', { title: 'Manage Students - Admin' }) %>

<div class="min-h-screen bg-gray-50 flex">
  <%- include('../partials/admin-sidebar') %>

  <div class="ml-56 flex-1">
    <div class="bg-white border-b px-6 py-4 flex items-center justify-between">
      <div>
        <h1 class="text-xl font-bold text-gray-800">Students</h1>
        <p class="text-sm text-gray-500">Manage students for entrance examinations</p>
      </div>
      <button onclick="openCreateModal()" class="px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700 transition cursor-pointer flex items-center space-x-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
        <span>Add Student</span>
      </button>
    </div>

    <div class="p-6">
      <div class="bg-white rounded-xl shadow-sm border overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left font-semibold text-gray-600">App ID</th>
                <th class="px-4 py-3 text-left font-semibold text-gray-600">Name</th>
                <th class="px-4 py-3 text-left font-semibold text-gray-600">Email</th>
                <th class="px-4 py-3 text-left font-semibold text-gray-600">Mobile</th>
                <th class="px-4 py-3 text-left font-semibold text-gray-600">Sessions</th>
                <th class="px-4 py-3 text-left font-semibold text-gray-600">Registered</th>
                <th class="px-4 py-3 text-right font-semibold text-gray-600">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% if (students.length === 0) { %>
                <tr>
                  <td colspan="7" class="px-4 py-12 text-center">
                    <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
                    <p class="text-gray-400 mb-3">No students registered yet</p>
                    <button onclick="openCreateModal()" class="text-indigo-600 text-sm font-medium hover:text-indigo-800 cursor-pointer">Add your first student</button>
                  </td>
                </tr>
              <% } %>
              <% students.forEach(s => { %>
                <tr class="hover:bg-gray-50 fade-in">
                  <td class="px-4 py-3 font-medium font-mono"><%= s.application_id %></td>
                  <td class="px-4 py-3 font-medium"><%= s.name %></td>
                  <td class="px-4 py-3 text-gray-500"><%= s.email || 'N/A' %></td>
                  <td class="px-4 py-3"><%= s.mobile %></td>
                  <td class="px-4 py-3">
                    <span class="inline-flex px-2 py-0.5 rounded-full text-xs font-medium <%= s.session_count > 0 ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-500' %>">
                      <%= s.session_count %>
                    </span>
                  </td>
                  <td class="px-4 py-3 text-gray-500"><%= new Date(s.created_at).toLocaleDateString() %></td>
                  <td class="px-4 py-3 text-right">
                    <div class="flex items-center justify-end space-x-1">
                      <% if (s.session_count > 0) { %>
                        <button onclick="openReassignModal(<%= s.id %>, '<%= s.name.replace(/'/g, "\\'") %>')" class="p-1.5 text-gray-400 hover:text-orange-600 hover:bg-orange-50 rounded-lg transition cursor-pointer" title="Reassign Test">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
                        </button>
                      <% } %>
                      <button onclick='editStudent(<%- JSON.stringify({id: s.id, application_id: s.application_id, name: s.name, email: s.email, mobile: s.mobile}) %>)' class="p-1.5 text-gray-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition cursor-pointer" title="Edit">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                      </button>
                      <% if (s.session_count === 0) { %>
                        <button onclick="deleteStudent(<%= s.id %>, '<%= s.name.replace(/'/g, "\\'") %>')" class="p-1.5 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition cursor-pointer" title="Delete">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                        </button>
                      <% } %>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Create/Edit Modal -->
<div id="studentModal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center">
  <div class="bg-white rounded-xl shadow-2xl w-full max-w-lg mx-4 p-6">
    <div class="flex items-center justify-between mb-5">
      <h2 class="text-lg font-bold text-gray-800" id="modalTitle">Add New Student</h2>
      <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600 cursor-pointer">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>

    <form id="studentForm" class="space-y-4">
      <input type="hidden" id="studentId" value="">

      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Application ID *</label>
          <input type="text" id="appId" required placeholder="e.g. APP2024002"
                 class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Full Name *</label>
          <input type="text" id="studentName" required placeholder="e.g. Jane Smith"
                 class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input type="email" id="studentEmail" placeholder="e.g. jane@example.com"
                 class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Mobile *</label>
          <input type="text" id="studentMobile" required placeholder="e.g. 9876543210"
                 class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
        </div>
        <div class="col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-1" id="passwordLabel">Password *</label>
          <input type="password" id="studentPassword" placeholder="Enter password"
                 class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
          <p class="text-xs text-gray-400 mt-1" id="passwordHint">Password will be securely hashed before storage</p>
        </div>
      </div>

      <div class="flex justify-end space-x-2 pt-2">
        <button type="button" onclick="closeModal()" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200 transition cursor-pointer">Cancel</button>
        <button type="submit" id="saveBtn" class="px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700 transition cursor-pointer">Create Student</button>
      </div>
    </form>
  </div>
</div>

<script>
let editingId = null;

function openCreateModal() {
  editingId = null;
  document.getElementById('modalTitle').textContent = 'Add New Student';
  document.getElementById('saveBtn').textContent = 'Create Student';
  document.getElementById('passwordLabel').textContent = 'Password *';
  document.getElementById('passwordHint').textContent = 'Password will be securely hashed before storage';
  document.getElementById('studentPassword').required = true;
  document.getElementById('studentForm').reset();
  document.getElementById('studentModal').classList.remove('hidden');
}

function editStudent(s) {
  editingId = s.id;
  document.getElementById('modalTitle').textContent = 'Edit Student';
  document.getElementById('saveBtn').textContent = 'Save Changes';
  document.getElementById('passwordLabel').textContent = 'New Password';
  document.getElementById('passwordHint').textContent = 'Leave blank to keep current password';
  document.getElementById('studentPassword').required = false;
  document.getElementById('appId').value = s.application_id;
  document.getElementById('studentName').value = s.name;
  document.getElementById('studentEmail').value = s.email || '';
  document.getElementById('studentMobile').value = s.mobile;
  document.getElementById('studentPassword').value = '';
  document.getElementById('studentModal').classList.remove('hidden');
}

function closeModal() {
  document.getElementById('studentModal').classList.add('hidden');
}

document.getElementById('studentForm').addEventListener('submit', async (e) => {
  e.preventDefault();
  const data = {
    application_id: document.getElementById('appId').value,
    name: document.getElementById('studentName').value,
    email: document.getElementById('studentEmail').value,
    mobile: document.getElementById('studentMobile').value,
    password: document.getElementById('studentPassword').value
  };

  if (!editingId && !data.password) {
    alert('Password is required for new students');
    return;
  }

  const url = editingId ? `/admin/students/${editingId}/update` : '/admin/students/create';
  const res = await fetch(url, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify(data)
  });
  const result = await res.json();
  if (result.success) {
    window.location.reload();
  } else {
    alert(result.error || 'Operation failed');
  }
});

// ===== Reassign Test =====
let reassignStudentId = null;
let reassignStudentName = '';
const reassignExamData = {};

function escapeHtml(str) {
  const div = document.createElement('div');
  div.textContent = str;
  return div.innerHTML;
}

async function openReassignModal(studentId, studentName) {
  reassignStudentId = studentId;
  reassignStudentName = studentName;
  document.getElementById('reassignStudentName').textContent = studentName;
  const tbody = document.getElementById('reassignSessionsList');
  tbody.innerHTML = '<tr><td colspan="5" class="px-4 py-8 text-center text-gray-400">Loading sessions...</td></tr>';
  document.getElementById('reassignModal').classList.remove('hidden');

  try {
    const res = await fetch('/admin/students/' + studentId + '/sessions');
    const data = await res.json();
    if (!data.success || data.sessions.length === 0) {
      tbody.innerHTML = '<tr><td colspan="5" class="px-4 py-8 text-center text-gray-400">No exam sessions found</td></tr>';
      return;
    }

    // Group sessions by exam (show only latest per exam)
    const examMap = {};
    data.sessions.forEach(function(s) {
      if (!examMap[s.exam_id]) examMap[s.exam_id] = s;
    });

    // Clear and rebuild rows using DOM
    tbody.innerHTML = '';
    Object.values(examMap).forEach(function(s) {
      // Store exam data for later use
      reassignExamData[s.exam_id] = s.exam_title;

      var statusColors = {
        submitted: 'bg-green-100 text-green-800',
        auto_submitted: 'bg-yellow-100 text-yellow-800',
        disqualified: 'bg-red-100 text-red-800',
        in_progress: 'bg-blue-100 text-blue-800',
        compatibility_check: 'bg-gray-100 text-gray-600',
        av_verification: 'bg-gray-100 text-gray-600',
        rules: 'bg-gray-100 text-gray-600'
      };
      var statusClass = statusColors[s.status] || 'bg-gray-100 text-gray-600';
      var statusText = s.status.replace(/_/g, ' ');
      var score = (s.score !== null && s.score !== undefined) ? s.score : '-';
      var date = new Date(s.created_at).toLocaleDateString();

      var tr = document.createElement('tr');
      tr.className = 'hover:bg-gray-50';

      var td1 = document.createElement('td');
      td1.className = 'px-4 py-3 font-medium text-sm';
      td1.textContent = s.exam_title;
      tr.appendChild(td1);

      var td2 = document.createElement('td');
      td2.className = 'px-4 py-3';
      td2.innerHTML = '<span class="inline-flex px-2 py-0.5 rounded-full text-xs font-medium ' + statusClass + '">' + escapeHtml(statusText) + '</span>';
      tr.appendChild(td2);

      var td3 = document.createElement('td');
      td3.className = 'px-4 py-3 text-sm text-gray-500';
      td3.textContent = score;
      tr.appendChild(td3);

      var td4 = document.createElement('td');
      td4.className = 'px-4 py-3 text-sm text-gray-500';
      td4.textContent = date;
      tr.appendChild(td4);

      var td5 = document.createElement('td');
      td5.className = 'px-4 py-3 text-right';
      var btn = document.createElement('button');
      btn.className = 'px-3 py-1.5 bg-orange-500 text-white rounded-lg text-xs font-medium hover:bg-orange-600 transition cursor-pointer';
      btn.textContent = 'Reassign';
      btn.setAttribute('data-exam-id', s.exam_id);
      btn.addEventListener('click', function() {
        reassignTest(s.exam_id);
      });
      td5.appendChild(btn);
      tr.appendChild(td5);

      tbody.appendChild(tr);
    });
  } catch (err) {
    tbody.innerHTML = '<tr><td colspan="5" class="px-4 py-8 text-center text-red-400">Failed to load sessions</td></tr>';
  }
}

function closeReassignModal() {
  document.getElementById('reassignModal').classList.add('hidden');
}

async function reassignTest(examId) {
  var examTitle = reassignExamData[examId] || 'this exam';
  var sendEmail = document.getElementById('reassignSendEmail').checked;
  var msg = 'Reassign "' + examTitle + '" to ' + reassignStudentName + '?\n\nThis will delete all previous session data (responses, violations, results) for this exam and allow the student to retake it.';
  if (sendEmail) msg += '\n\nA new invitation email will be sent.';
  if (!confirm(msg)) return;

  try {
    var res = await fetch('/admin/students/' + reassignStudentId + '/reassign-test', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ exam_id: examId, send_email: sendEmail })
    });
    var data = await res.json();
    if (data.success) {
      var resultMsg = 'Test reassigned successfully! ' + data.deletedSessions + ' session(s) cleared.';
      if (data.emailSent) resultMsg += '\nInvitation email sent.';
      alert(resultMsg);
      window.location.reload();
    } else {
      alert(data.error || 'Failed to reassign test');
    }
  } catch (err) {
    alert('Failed to reassign test');
  }
}

async function deleteStudent(id, name) {
  if (!confirm(`Delete student "${name}"? This cannot be undone.`)) return;
  const res = await fetch(`/admin/students/${id}/delete`, { method: 'POST' });
  const data = await res.json();
  if (data.success) window.location.reload();
  else alert(data.error || 'Failed to delete');
}
</script>

<!-- Reassign Test Modal -->
<div id="reassignModal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center">
  <div class="bg-white rounded-xl shadow-2xl w-full max-w-2xl mx-4 p-6">
    <div class="flex items-center justify-between mb-5">
      <div>
        <h2 class="text-lg font-bold text-gray-800">Reassign Test</h2>
        <p class="text-sm text-gray-500">Student: <span id="reassignStudentName" class="font-medium text-gray-700"></span></p>
      </div>
      <button onclick="closeReassignModal()" class="text-gray-400 hover:text-gray-600 cursor-pointer">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>

    <div class="bg-orange-50 border border-orange-200 rounded-lg p-3 mb-4">
      <p class="text-xs text-orange-700">Reassigning a test will delete all previous session data (responses, violations, results) for that exam. The student will be able to start the exam fresh.</p>
    </div>

    <div class="mb-4">
      <label class="flex items-center space-x-2 text-sm">
        <input type="checkbox" id="reassignSendEmail" class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
        <span class="text-gray-700">Send new invitation email after reassignment</span>
      </label>
    </div>

    <div class="bg-white rounded-lg border overflow-hidden">
      <table class="w-full text-sm">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-2 text-left font-semibold text-gray-600">Exam</th>
            <th class="px-4 py-2 text-left font-semibold text-gray-600">Status</th>
            <th class="px-4 py-2 text-left font-semibold text-gray-600">Score</th>
            <th class="px-4 py-2 text-left font-semibold text-gray-600">Date</th>
            <th class="px-4 py-2 text-right font-semibold text-gray-600">Action</th>
          </tr>
        </thead>
        <tbody id="reassignSessionsList" class="divide-y divide-gray-100">
        </tbody>
      </table>
    </div>

    <div class="flex justify-end mt-4">
      <button onclick="closeReassignModal()" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200 transition cursor-pointer">Close</button>
    </div>
  </div>
</div>

