<%- include('../partials/head', { title: 'Manage Students - Admin' }) %>

<div class="min-h-screen bg-gray-50">
  <nav class="bg-gray-800 text-white px-6 py-3 flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <a href="/admin/dashboard" class="text-gray-300 hover:text-white transition">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
      </a>
      <h1 class="font-bold">Manage Students</h1>
    </div>
    <span class="text-sm text-gray-300"><%= adminName %></span>
  </nav>

  <div class="max-w-5xl mx-auto px-6 py-8">
    <div class="bg-white rounded-xl shadow-sm border overflow-hidden">
      <table class="w-full text-sm">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left font-semibold text-gray-600">App ID</th>
            <th class="px-4 py-3 text-left font-semibold text-gray-600">Name</th>
            <th class="px-4 py-3 text-left font-semibold text-gray-600">Email</th>
            <th class="px-4 py-3 text-left font-semibold text-gray-600">Mobile</th>
            <th class="px-4 py-3 text-left font-semibold text-gray-600">Registered</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% students.forEach(s => { %>
            <tr>
              <td class="px-4 py-3 font-medium"><%= s.application_id %></td>
              <td class="px-4 py-3"><%= s.name %></td>
              <td class="px-4 py-3 text-gray-500"><%= s.email || 'N/A' %></td>
              <td class="px-4 py-3"><%= s.mobile %></td>
              <td class="px-4 py-3 text-gray-500"><%= new Date(s.created_at).toLocaleDateString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
