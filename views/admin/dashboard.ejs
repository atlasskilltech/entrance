<%- include('../partials/head', { title: 'Admin Dashboard' }) %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <nav class="bg-gray-800 text-white px-6 py-3 flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-white/10 rounded-lg flex items-center justify-center">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
      </div>
      <h1 class="font-bold">Admin Dashboard</h1>
    </div>
    <div class="flex items-center space-x-4">
      <span class="text-sm text-gray-300">Welcome, <strong><%= adminName %></strong></span>
      <a href="/admin/logout" class="text-sm text-red-300 hover:text-red-100">Logout</a>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto px-6 py-8">
    <!-- Stats Cards -->
    <div class="grid grid-cols-5 gap-4 mb-8">
      <div class="bg-white rounded-xl shadow-sm border p-5">
        <p class="text-sm text-gray-500">Total Students</p>
        <p class="text-3xl font-bold text-gray-800 mt-1"><%= stats.total_students %></p>
      </div>
      <div class="bg-white rounded-xl shadow-sm border p-5">
        <p class="text-sm text-gray-500">Total Sessions</p>
        <p class="text-3xl font-bold text-gray-800 mt-1"><%= stats.total_sessions %></p>
      </div>
      <div class="bg-white rounded-xl shadow-sm border p-5">
        <p class="text-sm text-gray-500">Active Now</p>
        <p class="text-3xl font-bold text-green-600 mt-1"><%= stats.active_sessions %></p>
      </div>
      <div class="bg-white rounded-xl shadow-sm border p-5">
        <p class="text-sm text-gray-500">Completed</p>
        <p class="text-3xl font-bold text-blue-600 mt-1"><%= stats.completed_sessions %></p>
      </div>
      <div class="bg-white rounded-xl shadow-sm border p-5">
        <p class="text-sm text-gray-500">Flagged</p>
        <p class="text-3xl font-bold text-red-600 mt-1"><%= stats.flagged_sessions %></p>
      </div>
    </div>

    <!-- Sessions Table -->
    <div class="bg-white rounded-xl shadow-sm border overflow-hidden">
      <div class="px-6 py-4 border-b flex items-center justify-between">
        <h2 class="font-bold text-gray-800">Exam Sessions</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left font-semibold text-gray-600">Student</th>
              <th class="px-4 py-3 text-left font-semibold text-gray-600">App ID</th>
              <th class="px-4 py-3 text-left font-semibold text-gray-600">Exam</th>
              <th class="px-4 py-3 text-left font-semibold text-gray-600">Status</th>
              <th class="px-4 py-3 text-left font-semibold text-gray-600">Violations</th>
              <th class="px-4 py-3 text-left font-semibold text-gray-600">Score</th>
              <th class="px-4 py-3 text-left font-semibold text-gray-600">Risk</th>
              <th class="px-4 py-3 text-left font-semibold text-gray-600">Review</th>
              <th class="px-4 py-3 text-left font-semibold text-gray-600">Action</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% if (sessions.length === 0) { %>
              <tr><td colspan="9" class="px-4 py-8 text-center text-gray-400">No exam sessions yet</td></tr>
            <% } %>
            <% sessions.forEach(s => { %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3 font-medium"><%= s.student_name %></td>
                <td class="px-4 py-3 text-gray-500"><%= s.application_id %></td>
                <td class="px-4 py-3 text-gray-500 max-w-32 truncate"><%= s.exam_title %></td>
                <td class="px-4 py-3">
                  <span class="inline-flex px-2 py-0.5 rounded-full text-xs font-medium
                    <%= s.status === 'submitted' ? 'bg-green-100 text-green-800' :
                       s.status === 'auto_submitted' ? 'bg-amber-100 text-amber-800' :
                       s.status === 'in_progress' ? 'bg-blue-100 text-blue-800' :
                       s.status === 'disqualified' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= s.status.replace('_', ' ') %>
                  </span>
                </td>
                <td class="px-4 py-3">
                  <span class="<%= s.violation_count > 5 ? 'text-red-600 font-bold' : s.violation_count > 2 ? 'text-amber-600 font-medium' : 'text-gray-600' %>">
                    <%= s.violation_count %>
                  </span>
                </td>
                <td class="px-4 py-3 font-medium"><%= s.score !== null ? s.score : '-' %></td>
                <td class="px-4 py-3">
                  <% if (s.risk_score !== null && s.risk_score !== undefined) { %>
                    <div class="flex items-center space-x-1">
                      <div class="w-12 h-1.5 bg-gray-200 rounded-full overflow-hidden">
                        <div class="h-full rounded-full <%= s.risk_score >= 70 ? 'bg-red-500' : s.risk_score >= 40 ? 'bg-amber-500' : 'bg-green-500' %>" style="width: <%= s.risk_score %>%"></div>
                      </div>
                      <span class="text-xs"><%= s.risk_score ? s.risk_score.toFixed(0) : 0 %>%</span>
                    </div>
                  <% } else { %>
                    <span class="text-gray-400">-</span>
                  <% } %>
                </td>
                <td class="px-4 py-3">
                  <% if (s.admin_status) { %>
                    <span class="inline-flex px-2 py-0.5 rounded-full text-xs font-medium
                      <%= s.admin_status === 'approved' ? 'bg-green-100 text-green-800' :
                         s.admin_status === 'flagged' ? 'bg-amber-100 text-amber-800' :
                         s.admin_status === 'disqualified' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                      <%= s.admin_status %>
                    </span>
                  <% } else { %>
                    <span class="text-gray-400">-</span>
                  <% } %>
                </td>
                <td class="px-4 py-3">
                  <a href="/admin/session/<%= s.id %>" class="text-indigo-600 hover:text-indigo-800 font-medium text-sm">
                    View Details
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
