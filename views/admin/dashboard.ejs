<%- include('../partials/head', { title: 'Admin Dashboard' }) %>

<div class="min-h-screen bg-gray-50 flex">
  <%- include('../partials/admin-sidebar') %>

  <div class="ml-56 flex-1">
    <!-- Header -->
    <div class="bg-white border-b px-6 py-4">
      <h1 class="text-xl font-bold text-gray-800">Dashboard</h1>
      <p class="text-sm text-gray-500">Overview of examination system</p>
    </div>

    <div class="p-6">
      <!-- Stats Cards -->
      <div class="grid grid-cols-4 gap-4 mb-6">
        <div class="bg-white rounded-xl shadow-sm border p-5">
          <p class="text-sm text-gray-500">Students</p>
          <p class="text-3xl font-bold text-gray-800 mt-1"><%= stats.total_students %></p>
        </div>
        <div class="bg-white rounded-xl shadow-sm border p-5">
          <p class="text-sm text-gray-500">Exams</p>
          <p class="text-3xl font-bold text-gray-800 mt-1"><%= stats.total_exams %></p>
        </div>
        <div class="bg-white rounded-xl shadow-sm border p-5">
          <p class="text-sm text-gray-500">Questions</p>
          <p class="text-3xl font-bold text-gray-800 mt-1"><%= stats.total_questions %></p>
        </div>
        <div class="bg-white rounded-xl shadow-sm border p-5">
          <p class="text-sm text-gray-500">Degrees</p>
          <p class="text-3xl font-bold text-gray-800 mt-1"><%= stats.total_degrees %></p>
        </div>
      </div>

      <div class="grid grid-cols-4 gap-4 mb-8">
        <div class="bg-white rounded-xl shadow-sm border p-5">
          <p class="text-sm text-gray-500">Total Sessions</p>
          <p class="text-3xl font-bold text-gray-800 mt-1"><%= stats.total_sessions %></p>
        </div>
        <div class="bg-white rounded-xl shadow-sm border p-5">
          <p class="text-sm text-gray-500">Active Now</p>
          <p class="text-3xl font-bold text-green-600 mt-1"><%= stats.active_sessions %></p>
        </div>
        <div class="bg-white rounded-xl shadow-sm border p-5">
          <p class="text-sm text-gray-500">Completed</p>
          <p class="text-3xl font-bold text-blue-600 mt-1"><%= stats.completed_sessions %></p>
        </div>
        <div class="bg-white rounded-xl shadow-sm border p-5">
          <p class="text-sm text-gray-500">Flagged</p>
          <p class="text-3xl font-bold text-red-600 mt-1"><%= stats.flagged_sessions %></p>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="grid grid-cols-3 gap-4 mb-8">
        <a href="/admin/degrees" class="bg-white rounded-xl shadow-sm border p-5 hover:shadow-md transition group">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center group-hover:bg-indigo-200 transition">
              <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
            </div>
            <div>
              <p class="font-semibold text-gray-800">Manage Degrees</p>
              <p class="text-xs text-gray-500">Add/edit degree programs</p>
            </div>
          </div>
        </a>
        <a href="/admin/exams" class="bg-white rounded-xl shadow-sm border p-5 hover:shadow-md transition group">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-200 transition">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
            </div>
            <div>
              <p class="font-semibold text-gray-800">Question Papers</p>
              <p class="text-xs text-gray-500">Configure papers & questions</p>
            </div>
          </div>
        </a>
        <a href="/admin/sessions" class="bg-white rounded-xl shadow-sm border p-5 hover:shadow-md transition group">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-amber-100 rounded-lg flex items-center justify-center group-hover:bg-amber-200 transition">
              <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
            </div>
            <div>
              <p class="font-semibold text-gray-800">Exam Sessions</p>
              <p class="text-xs text-gray-500">Review proctoring sessions</p>
            </div>
          </div>
        </a>
      </div>

      <!-- Recent Sessions Table -->
      <div class="bg-white rounded-xl shadow-sm border overflow-hidden">
        <div class="px-6 py-4 border-b">
          <h2 class="font-bold text-gray-800">Recent Exam Sessions</h2>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left font-semibold text-gray-600">Student</th>
                <th class="px-4 py-3 text-left font-semibold text-gray-600">App ID</th>
                <th class="px-4 py-3 text-left font-semibold text-gray-600">Exam</th>
                <th class="px-4 py-3 text-left font-semibold text-gray-600">Status</th>
                <th class="px-4 py-3 text-left font-semibold text-gray-600">Violations</th>
                <th class="px-4 py-3 text-left font-semibold text-gray-600">Score</th>
                <th class="px-4 py-3 text-left font-semibold text-gray-600">Risk</th>
                <th class="px-4 py-3 text-left font-semibold text-gray-600">Action</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% if (sessions.length === 0) { %>
                <tr><td colspan="8" class="px-4 py-8 text-center text-gray-400">No exam sessions yet</td></tr>
              <% } %>
              <% sessions.slice(0, 10).forEach(s => { %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3 font-medium"><%= s.student_name %></td>
                  <td class="px-4 py-3 text-gray-500"><%= s.application_id %></td>
                  <td class="px-4 py-3 text-gray-500 max-w-32 truncate"><%= s.exam_title %></td>
                  <td class="px-4 py-3">
                    <span class="inline-flex px-2 py-0.5 rounded-full text-xs font-medium
                      <%= s.status === 'submitted' ? 'bg-green-100 text-green-800' :
                         s.status === 'auto_submitted' ? 'bg-amber-100 text-amber-800' :
                         s.status === 'in_progress' ? 'bg-blue-100 text-blue-800' :
                         s.status === 'disqualified' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                      <%= s.status.replace('_', ' ') %>
                    </span>
                  </td>
                  <td class="px-4 py-3"><%= s.violation_count %></td>
                  <td class="px-4 py-3 font-medium"><%= s.score !== null ? s.score : '-' %></td>
                  <td class="px-4 py-3">
                    <% if (s.risk_score !== null && s.risk_score !== undefined) { %>
                      <div class="flex items-center space-x-1">
                        <div class="w-12 h-1.5 bg-gray-200 rounded-full overflow-hidden">
                          <div class="h-full rounded-full <%= s.risk_score >= 70 ? 'bg-red-500' : s.risk_score >= 40 ? 'bg-amber-500' : 'bg-green-500' %>" style="width: <%= s.risk_score %>%"></div>
                        </div>
                        <span class="text-xs"><%= s.risk_score ? Number(s.risk_score).toFixed(0) : 0 %>%</span>
                      </div>
                    <% } else { %>-<% } %>
                  </td>
                  <td class="px-4 py-3">
                    <a href="/admin/session/<%= s.id %>" class="text-indigo-600 hover:text-indigo-800 font-medium text-sm">View</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <% if (sessions.length > 10) { %>
          <div class="px-6 py-3 border-t text-center">
            <a href="/admin/sessions" class="text-indigo-600 text-sm font-medium hover:text-indigo-800">View All Sessions</a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
