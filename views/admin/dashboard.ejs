<%- include('../partials/head', { title: 'Admin Dashboard' }) %>

<div class="min-h-screen flex">
  <%- include('../partials/admin-sidebar') %>

  <div class="lg:ml-64 flex-1">
    <!-- Header -->
    <div class="bg-[var(--card)] border-b border-[var(--card-border)] px-4 sm:px-6 py-4">
      <h1 class="text-xl font-bold text-surface-900 dark:text-surface-50 ml-10 lg:ml-0">Dashboard</h1>
      <p class="text-sm text-surface-500 dark:text-surface-400 ml-10 lg:ml-0">Overview of examination system</p>
    </div>

    <div class="p-4 sm:p-6">
      <!-- Stats Cards -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 mb-6">
        <div class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] p-4 sm:p-5">
          <p class="text-sm text-surface-500 dark:text-surface-400">Students</p>
          <p class="text-2xl sm:text-3xl font-bold text-surface-900 dark:text-surface-50 mt-1"><%= stats.total_students %></p>
        </div>
        <div class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] p-4 sm:p-5">
          <p class="text-sm text-surface-500 dark:text-surface-400">Exams</p>
          <p class="text-2xl sm:text-3xl font-bold text-surface-900 dark:text-surface-50 mt-1"><%= stats.total_exams %></p>
        </div>
        <div class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] p-4 sm:p-5">
          <p class="text-sm text-surface-500 dark:text-surface-400">Questions</p>
          <p class="text-2xl sm:text-3xl font-bold text-surface-900 dark:text-surface-50 mt-1"><%= stats.total_questions %></p>
        </div>
        <div class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] p-4 sm:p-5">
          <p class="text-sm text-surface-500 dark:text-surface-400">Degrees</p>
          <p class="text-2xl sm:text-3xl font-bold text-surface-900 dark:text-surface-50 mt-1"><%= stats.total_degrees %></p>
        </div>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 mb-8">
        <div class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] p-4 sm:p-5">
          <p class="text-sm text-surface-500 dark:text-surface-400">Total Sessions</p>
          <p class="text-2xl sm:text-3xl font-bold text-surface-900 dark:text-surface-50 mt-1"><%= stats.total_sessions %></p>
        </div>
        <div class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] p-4 sm:p-5">
          <p class="text-sm text-surface-500 dark:text-surface-400">Active Now</p>
          <p class="text-2xl sm:text-3xl font-bold text-accent-600 dark:text-accent-400 mt-1"><%= stats.active_sessions %></p>
        </div>
        <div class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] p-4 sm:p-5">
          <p class="text-sm text-surface-500 dark:text-surface-400">Completed</p>
          <p class="text-2xl sm:text-3xl font-bold text-primary-500 dark:text-primary-400 mt-1"><%= stats.completed_sessions %></p>
        </div>
        <div class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] p-4 sm:p-5">
          <p class="text-sm text-surface-500 dark:text-surface-400">Flagged</p>
          <p class="text-2xl sm:text-3xl font-bold text-red-600 dark:text-red-400 mt-1"><%= stats.flagged_sessions %></p>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
        <a href="/admin/degrees" class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] p-5 hover:shadow-md transition group">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-primary-50 dark:bg-primary-900/30 rounded-xl flex items-center justify-center group-hover:bg-primary-100 dark:group-hover:bg-primary-900/50 transition">
              <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
            </div>
            <div>
              <p class="font-semibold text-surface-900 dark:text-surface-50">Manage Degrees</p>
              <p class="text-xs text-surface-500 dark:text-surface-400">Add/edit degree programs</p>
            </div>
          </div>
        </a>
        <a href="/admin/exams" class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] p-5 hover:shadow-md transition group">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-accent-50 dark:bg-accent-900/30 rounded-xl flex items-center justify-center group-hover:bg-accent-100 dark:group-hover:bg-accent-900/50 transition">
              <svg class="w-5 h-5 text-accent-600 dark:text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
            </div>
            <div>
              <p class="font-semibold text-surface-900 dark:text-surface-50">Question Papers</p>
              <p class="text-xs text-surface-500 dark:text-surface-400">Configure papers & questions</p>
            </div>
          </div>
        </a>
        <a href="/admin/sessions" class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] p-5 hover:shadow-md transition group">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-amber-50 dark:bg-amber-900/30 rounded-xl flex items-center justify-center group-hover:bg-amber-100 dark:group-hover:bg-amber-900/50 transition">
              <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
            </div>
            <div>
              <p class="font-semibold text-surface-900 dark:text-surface-50">Exam Sessions</p>
              <p class="text-xs text-surface-500 dark:text-surface-400">Review proctoring sessions</p>
            </div>
          </div>
        </a>
      </div>

      <!-- Recent Sessions Table -->
      <div class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] overflow-hidden">
        <div class="px-4 sm:px-6 py-4 border-b border-[var(--card-border)]">
          <h2 class="font-bold text-surface-900 dark:text-surface-50">Recent Exam Sessions</h2>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead class="bg-surface-50 dark:bg-surface-800/50">
              <tr>
                <th class="px-4 py-3 text-left font-semibold text-surface-600 dark:text-surface-400">Student</th>
                <th class="px-4 py-3 text-left font-semibold text-surface-600 dark:text-surface-400">App ID</th>
                <th class="px-4 py-3 text-left font-semibold text-surface-600 dark:text-surface-400">Exam</th>
                <th class="px-4 py-3 text-left font-semibold text-surface-600 dark:text-surface-400">Status</th>
                <th class="px-4 py-3 text-left font-semibold text-surface-600 dark:text-surface-400">Violations</th>
                <th class="px-4 py-3 text-left font-semibold text-surface-600 dark:text-surface-400">Score</th>
                <th class="px-4 py-3 text-left font-semibold text-surface-600 dark:text-surface-400">Risk</th>
                <th class="px-4 py-3 text-left font-semibold text-surface-600 dark:text-surface-400">Action</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-surface-100 dark:divide-surface-800">
              <% if (sessions.length === 0) { %>
                <tr><td colspan="8" class="px-4 py-8 text-center text-surface-400">No exam sessions yet</td></tr>
              <% } %>
              <% sessions.slice(0, 10).forEach(s => { %>
                <tr class="hover:bg-surface-50 dark:hover:bg-surface-800/30 transition">
                  <td class="px-4 py-3 font-medium text-surface-900 dark:text-surface-100"><%= s.student_name %></td>
                  <td class="px-4 py-3 text-surface-500 dark:text-surface-400"><%= s.application_id %></td>
                  <td class="px-4 py-3 text-surface-500 dark:text-surface-400 max-w-32 truncate"><%= s.exam_title %></td>
                  <td class="px-4 py-3">
                    <span class="inline-flex px-2 py-0.5 rounded-full text-xs font-semibold
                      <%= s.status === 'submitted' ? 'bg-green-50 dark:bg-green-900/20 text-green-700 dark:text-green-400' :
                         s.status === 'auto_submitted' ? 'bg-amber-50 dark:bg-amber-900/20 text-amber-700 dark:text-amber-400' :
                         s.status === 'in_progress' ? 'bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-400' :
                         s.status === 'disqualified' ? 'bg-red-50 dark:bg-red-900/20 text-red-700 dark:text-red-400' : 'bg-surface-100 dark:bg-surface-800 text-surface-600 dark:text-surface-400' %>">
                      <%= s.status.replace('_', ' ') %>
                    </span>
                  </td>
                  <td class="px-4 py-3 text-surface-900 dark:text-surface-100"><%= s.violation_count %></td>
                  <td class="px-4 py-3 font-medium text-surface-900 dark:text-surface-100"><%= s.score !== null ? s.score : '-' %></td>
                  <td class="px-4 py-3">
                    <% if (s.risk_score !== null && s.risk_score !== undefined) { %>
                      <div class="flex items-center space-x-1">
                        <div class="w-12 h-1.5 bg-surface-200 dark:bg-surface-700 rounded-full overflow-hidden">
                          <div class="h-full rounded-full <%= s.risk_score >= 70 ? 'bg-red-500' : s.risk_score >= 40 ? 'bg-amber-500' : 'bg-accent-500' %>" style="width: <%= s.risk_score %>%"></div>
                        </div>
                        <span class="text-xs text-surface-600 dark:text-surface-400"><%= s.risk_score ? Number(s.risk_score).toFixed(0) : 0 %>%</span>
                      </div>
                    <% } else { %>-<% } %>
                  </td>
                  <td class="px-4 py-3">
                    <a href="/admin/session/<%= s.id %>" class="text-primary-500 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium text-sm">View</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <% if (sessions.length > 10) { %>
          <div class="px-6 py-3 border-t border-[var(--card-border)] text-center">
            <a href="/admin/sessions" class="text-primary-500 dark:text-primary-400 text-sm font-medium hover:text-primary-700 dark:hover:text-primary-300">View All Sessions</a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
