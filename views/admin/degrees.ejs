<%- include('../partials/head', { title: 'Degrees & Programs - Admin' }) %>

<div class="min-h-screen bg-gray-50 flex">
  <%- include('../partials/admin-sidebar') %>

  <div class="ml-56 flex-1">
    <!-- Header -->
    <div class="bg-white border-b px-6 py-4 flex items-center justify-between">
      <div>
        <h1 class="text-xl font-bold text-gray-800">Degrees & Programs</h1>
        <p class="text-sm text-gray-500">Manage degree programs for entrance examinations</p>
      </div>
      <button onclick="openCreateModal()" class="px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700 transition cursor-pointer flex items-center space-x-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
        <span>Add Degree</span>
      </button>
    </div>

    <div class="p-6">
      <!-- Degrees Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% degrees.forEach(d => { %>
          <div class="bg-white rounded-xl shadow-sm border p-5 hover:shadow-md transition fade-in">
            <div class="flex items-start justify-between mb-3">
              <div>
                <div class="flex items-center space-x-2">
                  <span class="inline-flex px-2 py-0.5 rounded-full text-xs font-bold bg-indigo-100 text-indigo-700"><%= d.code %></span>
                  <span class="inline-flex px-2 py-0.5 rounded-full text-xs font-medium <%= d.is_active ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-500' %>">
                    <%= d.is_active ? 'Active' : 'Inactive' %>
                  </span>
                </div>
                <h3 class="text-lg font-bold text-gray-800 mt-1"><%= d.name %></h3>
              </div>
              <div class="flex space-x-1">
                <button onclick='editDegree(<%- JSON.stringify(d) %>)' class="p-1.5 text-gray-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition cursor-pointer">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                </button>
                <% if (d.exam_count === 0) { %>
                  <button onclick="deleteDegree(<%= d.id %>, '<%= d.name %>')" class="p-1.5 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition cursor-pointer">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                  </button>
                <% } %>
              </div>
            </div>
            <% if (d.description) { %>
              <p class="text-sm text-gray-500 mb-3"><%= d.description %></p>
            <% } %>
            <div class="flex items-center space-x-4 text-xs text-gray-500">
              <% if (d.department) { %>
                <span class="flex items-center space-x-1">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                  <span><%= d.department %></span>
                </span>
              <% } %>
              <span><%= d.duration_years %> years</span>
              <span><%= d.exam_count %> exam<%= d.exam_count !== 1 ? 's' : '' %></span>
            </div>
          </div>
        <% }) %>

        <% if (degrees.length === 0) { %>
          <div class="col-span-3 bg-white rounded-xl shadow-sm border p-12 text-center">
            <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
            <p class="text-gray-400 mb-3">No degree programs added yet</p>
            <button onclick="openCreateModal()" class="text-indigo-600 text-sm font-medium hover:text-indigo-800">Add your first degree</button>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Create/Edit Modal -->
<div id="degreeModal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center">
  <div class="bg-white rounded-xl shadow-2xl w-full max-w-lg mx-4 p-6">
    <div class="flex items-center justify-between mb-5">
      <h2 class="text-lg font-bold text-gray-800" id="modalTitle">Add New Degree</h2>
      <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600 cursor-pointer">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>

    <form id="degreeForm" class="space-y-4">
      <input type="hidden" id="degreeId" value="">

      <div class="grid grid-cols-2 gap-4">
        <div class="col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-1">Degree Name *</label>
          <input type="text" id="degreeName" required placeholder="e.g. Bachelor of Design"
                 class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Code *</label>
          <input type="text" id="degreeCode" required placeholder="e.g. B.Des"
                 class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Duration (Years)</label>
          <input type="number" id="degreeDuration" value="4" min="1" max="10"
                 class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
        </div>
        <div class="col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-1">Department</label>
          <input type="text" id="degreeDept" placeholder="e.g. School of Design"
                 class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
        </div>
        <div class="col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
          <textarea id="degreeDesc" rows="2" placeholder="Brief description of the program..."
                    class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"></textarea>
        </div>
        <div class="col-span-2" id="activeField" style="display:none">
          <label class="flex items-center space-x-2 cursor-pointer">
            <input type="checkbox" id="degreeActive" checked class="w-4 h-4 text-indigo-600 rounded cursor-pointer">
            <span class="text-sm text-gray-700">Active</span>
          </label>
        </div>
      </div>

      <div class="flex justify-end space-x-2 pt-2">
        <button type="button" onclick="closeModal()" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200 transition cursor-pointer">Cancel</button>
        <button type="submit" id="saveBtn" class="px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700 transition cursor-pointer">Create Degree</button>
      </div>
    </form>
  </div>
</div>

<script>
let editingId = null;

function openCreateModal() {
  editingId = null;
  document.getElementById('modalTitle').textContent = 'Add New Degree';
  document.getElementById('saveBtn').textContent = 'Create Degree';
  document.getElementById('activeField').style.display = 'none';
  document.getElementById('degreeForm').reset();
  document.getElementById('degreeDuration').value = 4;
  document.getElementById('degreeModal').classList.remove('hidden');
}

function editDegree(d) {
  editingId = d.id;
  document.getElementById('modalTitle').textContent = 'Edit Degree';
  document.getElementById('saveBtn').textContent = 'Save Changes';
  document.getElementById('activeField').style.display = 'block';
  document.getElementById('degreeName').value = d.name;
  document.getElementById('degreeCode').value = d.code;
  document.getElementById('degreeDuration').value = d.duration_years;
  document.getElementById('degreeDept').value = d.department || '';
  document.getElementById('degreeDesc').value = d.description || '';
  document.getElementById('degreeActive').checked = d.is_active;
  document.getElementById('degreeModal').classList.remove('hidden');
}

function closeModal() {
  document.getElementById('degreeModal').classList.add('hidden');
}

document.getElementById('degreeForm').addEventListener('submit', async (e) => {
  e.preventDefault();
  const data = {
    name: document.getElementById('degreeName').value,
    code: document.getElementById('degreeCode').value,
    duration_years: parseInt(document.getElementById('degreeDuration').value) || 4,
    department: document.getElementById('degreeDept').value,
    description: document.getElementById('degreeDesc').value,
    is_active: document.getElementById('degreeActive').checked
  };

  const url = editingId ? `/admin/degrees/${editingId}/update` : '/admin/degrees/create';
  const res = await fetch(url, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify(data)
  });
  const result = await res.json();
  if (result.success) {
    window.location.reload();
  } else {
    alert(result.error || 'Operation failed');
  }
});

async function deleteDegree(id, name) {
  if (!confirm(`Delete degree "${name}"? This cannot be undone.`)) return;
  const res = await fetch(`/admin/degrees/${id}/delete`, { method: 'POST' });
  const data = await res.json();
  if (data.success) window.location.reload();
  else alert(data.error || 'Failed to delete');
}
</script>

<%- include('../partials/footer') %>
