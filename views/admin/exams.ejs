<%- include('../partials/head', { title: 'Manage Exams - Admin' }) %>

<div class="min-h-screen bg-gray-50">
  <nav class="bg-gray-800 text-white px-6 py-3 flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <a href="/admin/dashboard" class="text-gray-300 hover:text-white transition">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
      </a>
      <h1 class="font-bold">Manage Exams</h1>
    </div>
    <span class="text-sm text-gray-300"><%= adminName %></span>
  </nav>

  <div class="max-w-5xl mx-auto px-6 py-8">
    <div class="bg-white rounded-xl shadow-sm border overflow-hidden">
      <table class="w-full text-sm">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left font-semibold text-gray-600">ID</th>
            <th class="px-4 py-3 text-left font-semibold text-gray-600">Title</th>
            <th class="px-4 py-3 text-left font-semibold text-gray-600">Duration</th>
            <th class="px-4 py-3 text-left font-semibold text-gray-600">Questions</th>
            <th class="px-4 py-3 text-left font-semibold text-gray-600">Status</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% exams.forEach(e => { %>
            <tr>
              <td class="px-4 py-3"><%= e.id %></td>
              <td class="px-4 py-3 font-medium"><%= e.title %></td>
              <td class="px-4 py-3"><%= e.duration_minutes %> min</td>
              <td class="px-4 py-3"><%= e.total_questions %></td>
              <td class="px-4 py-3">
                <span class="inline-flex px-2 py-0.5 rounded-full text-xs font-medium <%= e.is_active ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= e.is_active ? 'Active' : 'Inactive' %>
                </span>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
