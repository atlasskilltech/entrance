<%- include('partials/head', { title: 'Student Login - Entrance Exam' }) %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary-800 via-primary-900 to-primary-950 p-4">
  <div class="absolute inset-0 opacity-[0.03]" style="background-image:url('data:image/svg+xml,%3Csvg width=60 height=60 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22%23fff%22 fill-opacity=%221%22%3E%3Ccircle cx=%2230%22 cy=%2230%22 r=%221.5%22/%3E%3C/g%3E%3C/svg%3E')"></div>

  <div class="relative bg-white dark:bg-surface-900 rounded-2xl shadow-2xl w-full max-w-md p-8 fade-in border border-surface-200 dark:border-surface-700">
    <div class="text-center mb-8">
      <div class="w-16 h-16 bg-gradient-to-br from-primary-700 to-primary-900 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg shadow-primary-900/30">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-surface-900 dark:text-surface-50">Online Entrance Examination</h1>
      <p class="text-surface-500 dark:text-surface-400 mt-1 text-sm">Design Aptitude Test - Proctored Mode</p>
    </div>

    <% if (error) { %>
      <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-700 dark:text-red-400 px-4 py-3 rounded-xl mb-4 text-sm"><%= error %></div>
    <% } %>

    <form action="/login" method="POST" class="space-y-5">
      <div>
        <label class="block text-sm font-semibold text-surface-700 dark:text-surface-300 mb-1.5">Application ID</label>
        <input type="text" name="application_id" placeholder="e.g. APP2024001"
               class="w-full px-4 py-3 bg-[var(--input-bg)] border border-[var(--input-border)] rounded-xl focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition text-surface-900 dark:text-surface-100 placeholder-surface-400" required>
      </div>
      <button type="submit"
              class="w-full bg-accent-500 text-white py-3 rounded-xl font-semibold hover:bg-accent-600 transition shadow-lg shadow-accent-500/25 hover:shadow-accent-500/40 cursor-pointer">
        Login to Portal
      </button>
    </form>

    <div class="mt-6 text-center">
      <p class="text-xs text-surface-400">Demo: APP2024001</p>
    </div>

    <div class="mt-4 pt-4 border-t border-surface-200 dark:border-surface-700 flex items-center justify-between">
      <a href="/admin/login" class="text-sm text-primary-500 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition font-medium">Admin Login</a>
      <button onclick="toggleTheme()" class="p-2 text-surface-400 hover:text-surface-600 dark:hover:text-surface-300 transition cursor-pointer rounded-lg hover:bg-surface-100 dark:hover:bg-surface-800" title="Toggle theme">
        <svg class="w-4 h-4 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
        <svg class="w-4 h-4 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/></svg>
      </button>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
