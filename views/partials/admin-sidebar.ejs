    <a href="/admin/degrees" class="flex items-center space-x-2 px-3 py-2 rounded-lg text-sm transition
      <%= typeof activePage !== 'undefined' && activePage === 'degrees' ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %>">
