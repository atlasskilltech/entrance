  <!-- Footer -->
  <div class="px-4 py-3 border-t border-gray-700">
    <div class="flex items-center justify-between">
      <span class="text-xs text-gray-400 truncate"><%= typeof adminName !== 'undefined' ? adminName : 'Admin' %></span>
      <a href="/admin/logout" class="text-xs text-red-400 hover:text-red-300">Logout</a>
    </div>
  </div>
</div>
