<%- include('../partials/head', { title: 'System Check - ' + exam.title }) %>

<div class="min-h-screen bg-gradient-to-br from-blue-600 via-indigo-700 to-purple-800 flex items-center justify-center p-4">
  <div class="bg-white rounded-2xl shadow-2xl w-full max-w-2xl p-8 fade-in">
    <div class="text-center mb-6">
      <div class="w-14 h-14 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-3">
        <svg class="w-7 h-7 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
      </div>
      <h1 class="text-2xl font-bold text-gray-800">System Compatibility Check</h1>
      <p class="text-gray-500 mt-1"><%= exam.title %></p>
    </div>

    <!-- Progress Steps -->
    <div class="flex items-center justify-center mb-8 space-x-2">
      <div class="flex items-center space-x-2">
        <div class="w-8 h-8 bg-indigo-600 text-white rounded-full flex items-center justify-center text-sm font-bold">1</div>
        <span class="text-sm font-medium text-indigo-600">System Check</span>
      </div>
      <div class="w-8 h-0.5 bg-gray-300"></div>
      <div class="flex items-center space-x-2">
        <div class="w-8 h-8 bg-gray-300 text-gray-500 rounded-full flex items-center justify-center text-sm font-bold">2</div>
        <span class="text-sm text-gray-400">A/V Check</span>
      </div>
      <div class="w-8 h-0.5 bg-gray-300"></div>
      <div class="flex items-center space-x-2">
        <div class="w-8 h-8 bg-gray-300 text-gray-500 rounded-full flex items-center justify-center text-sm font-bold">3</div>
        <span class="text-sm text-gray-400">Rules</span>
      </div>
      <div class="w-8 h-0.5 bg-gray-300"></div>
      <div class="flex items-center space-x-2">
        <div class="w-8 h-8 bg-gray-300 text-gray-500 rounded-full flex items-center justify-center text-sm font-bold">4</div>
        <span class="text-sm text-gray-400">Exam</span>
      </div>
    </div>

    <!-- Check Items -->
    <div class="space-y-3" id="checkList">

      <!-- Screen Resolution -->
      <div class="p-4 bg-gray-50 rounded-lg border transition-all" id="screenRow">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center" id="screenIcon">
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
            </div>
            <div>
              <p class="font-semibold text-gray-800">Screen Resolution</p>
              <p class="text-xs text-gray-500" id="screenInfo">Checking...</p>
            </div>
          </div>
          <div class="flex items-center space-x-2">
            <span id="screenStatus" class="text-sm font-medium text-gray-400">Checking...</span>
          </div>
        </div>
        <!-- Failure help panel -->
        <div id="screenHelp" class="hidden mt-3 pt-3 border-t border-red-200">
          <div class="bg-red-50 rounded-lg p-3">
            <p class="text-sm text-red-700 font-medium mb-1">Screen resolution is too low</p>
            <p class="text-xs text-red-600">Your screen resolution must be at least <strong>1024x600</strong> pixels. Please try maximizing your browser window or switching to a larger display.</p>
            <button onclick="retryScreenCheck()" class="mt-2 px-3 py-1.5 bg-red-600 text-white text-xs font-medium rounded-md hover:bg-red-700 transition cursor-pointer">
              <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
              Re-check Resolution
            </button>
          </div>
        </div>
      </div>

      <!-- Camera Access -->
      <div class="p-4 bg-gray-50 rounded-lg border transition-all" id="cameraRow">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center" id="cameraIcon">
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/></svg>
            </div>
            <div>
              <p class="font-semibold text-gray-800">Camera Access</p>
              <p class="text-xs text-gray-500" id="cameraInfo">Requesting permission...</p>
            </div>
          </div>
          <div class="flex items-center space-x-2">
            <span id="cameraStatus" class="text-sm font-medium text-gray-400">Pending...</span>
          </div>
        </div>
        <!-- Failure help panel -->
        <div id="cameraHelp" class="hidden mt-3 pt-3 border-t border-red-200">
          <div class="bg-red-50 rounded-lg p-3">
            <p class="text-sm text-red-700 font-medium mb-1">Camera access is required</p>
            <p class="text-xs text-red-600 mb-2">This proctored exam requires camera access for identity verification. Please allow camera permission when prompted by your browser.</p>
            <div class="text-xs text-red-600 mb-2">
              <p class="font-medium mb-1">How to fix:</p>
              <ol class="list-decimal list-inside space-y-0.5">
                <li>Click the camera/lock icon in your browser's address bar</li>
                <li>Set Camera permission to <strong>"Allow"</strong></li>
                <li>Click the retry button below</li>
              </ol>
            </div>
            <button onclick="retryCameraCheck()" class="px-3 py-1.5 bg-red-600 text-white text-xs font-medium rounded-md hover:bg-red-700 transition cursor-pointer">
              <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
              Retry Camera Access
            </button>
          </div>
        </div>
      </div>

      <!-- Microphone Access -->
      <div class="p-4 bg-gray-50 rounded-lg border transition-all" id="micRow">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center" id="micIcon">
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-14 0m14 0a7 7 0 00-14 0m14 0v1a7 7 0 01-14 0v-1m7 8v4m-4 0h8"/></svg>
            </div>
            <div>
              <p class="font-semibold text-gray-800">Microphone Access</p>
              <p class="text-xs text-gray-500" id="micInfo">Requesting permission...</p>
            </div>
          </div>
          <div class="flex items-center space-x-2">
            <span id="micStatus" class="text-sm font-medium text-gray-400">Pending...</span>
          </div>
        </div>
        <!-- Failure help panel -->
        <div id="micHelp" class="hidden mt-3 pt-3 border-t border-red-200">
          <div class="bg-red-50 rounded-lg p-3">
            <p class="text-sm text-red-700 font-medium mb-1">Microphone access is required</p>
            <p class="text-xs text-red-600 mb-2">This proctored exam requires microphone access for audio monitoring. Please allow microphone permission when prompted by your browser.</p>
            <div class="text-xs text-red-600 mb-2">
              <p class="font-medium mb-1">How to fix:</p>
              <ol class="list-decimal list-inside space-y-0.5">
                <li>Click the camera/lock icon in your browser's address bar</li>
                <li>Set Microphone permission to <strong>"Allow"</strong></li>
                <li>Click the retry button below</li>
              </ol>
            </div>
            <button onclick="retryMicCheck()" class="px-3 py-1.5 bg-red-600 text-white text-xs font-medium rounded-md hover:bg-red-700 transition cursor-pointer">
              <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
              Retry Microphone Access
            </button>
          </div>
        </div>
      </div>

      <!-- Speaker Check -->
      <div class="p-4 bg-gray-50 rounded-lg border transition-all" id="speakerRow">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center" id="speakerIcon">
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"/></svg>
            </div>
            <div>
              <p class="font-semibold text-gray-800">Speaker Check</p>
              <p class="text-xs text-gray-500" id="speakerInfo">Checking audio output...</p>
            </div>
          </div>
          <div class="flex items-center space-x-2">
            <span id="speakerStatus" class="text-sm font-medium text-gray-400">Checking...</span>
          </div>
        </div>
        <!-- Failure help panel -->
        <div id="speakerHelp" class="hidden mt-3 pt-3 border-t border-red-200">
          <div class="bg-red-50 rounded-lg p-3">
            <p class="text-sm text-red-700 font-medium mb-1">Speaker/audio output not detected</p>
            <p class="text-xs text-red-600 mb-2">Your browser could not detect audio output capabilities. Please ensure your speakers or headphones are connected and not muted.</p>
            <div class="text-xs text-red-600 mb-2">
              <p class="font-medium mb-1">How to fix:</p>
              <ol class="list-decimal list-inside space-y-0.5">
                <li>Connect speakers or headphones to your device</li>
                <li>Make sure they are not muted</li>
                <li>Click the retry button below</li>
              </ol>
            </div>
            <button onclick="retrySpeakerCheck()" class="px-3 py-1.5 bg-red-600 text-white text-xs font-medium rounded-md hover:bg-red-700 transition cursor-pointer">
              <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
              Retry Speaker Check
            </button>
          </div>
        </div>
      </div>

    </div>

    <!-- Summary status bar -->
    <div id="summaryBar" class="hidden mt-5 p-3 rounded-lg text-sm font-medium text-center"></div>

    <!-- Continue Button -->
    <div class="mt-6 text-center">
      <button id="continueBtn" disabled
              class="px-8 py-3 bg-indigo-600 text-white rounded-lg font-semibold hover:bg-indigo-700 transition shadow-lg disabled:bg-gray-300 disabled:cursor-not-allowed cursor-pointer"
              onclick="proceedToAVCheck()">
        Continue to Audio/Video Verification
        <svg class="w-4 h-4 inline ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
      </button>
    </div>
  </div>
</div>

<!-- Permission Request Modal -->
<div id="permissionModal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4">
  <div class="bg-white rounded-xl shadow-2xl max-w-md w-full p-6 fade-in">
    <div class="text-center mb-4">
      <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-3">
        <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/></svg>
      </div>
      <h3 class="text-lg font-bold text-gray-800" id="modalTitle">Permission Required</h3>
      <p class="text-sm text-gray-500 mt-1" id="modalMessage">Your browser will ask for permission. Please click "Allow" when prompted.</p>
    </div>
    <div id="modalInstructions" class="bg-gray-50 rounded-lg p-3 mb-4 text-sm text-gray-600"></div>
    <div class="flex space-x-3">
      <button onclick="closeModal()" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg font-medium hover:bg-gray-50 transition cursor-pointer">Cancel</button>
      <button id="modalActionBtn" onclick="modalAction()" class="flex-1 px-4 py-2 bg-indigo-600 text-white rounded-lg font-medium hover:bg-indigo-700 transition cursor-pointer">Grant Permission</button>
    </div>
  </div>
</div>

<script>
const checkResults = { screen: false, camera: false, mic: false, speaker: false };
let checksCompleted = { screen: false, camera: false, mic: false, speaker: false };
let currentModalAction = null;

// --- UI Helpers ---

function setCheckStatus(id, pass, info) {
  const statusEl = document.getElementById(id + 'Status');
  const iconEl = document.getElementById(id + 'Icon');
  const infoEl = document.getElementById(id + 'Info');
  const helpEl = document.getElementById(id + 'Help');
  const rowEl = document.getElementById(id + 'Row');

  if (pass) {
    statusEl.innerHTML = '<svg class="w-5 h-5 text-green-500 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg> <span class="text-green-600">Passed</span>';
    iconEl.className = 'w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center';
    iconEl.querySelector('svg').setAttribute('class', 'w-5 h-5 text-green-600');
    if (rowEl) rowEl.className = 'p-4 bg-green-50 rounded-lg border border-green-200 transition-all';
    if (helpEl) helpEl.classList.add('hidden');
  } else {
    statusEl.innerHTML = '<svg class="w-5 h-5 text-red-500 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg> <span class="text-red-600">Failed</span>';
    iconEl.className = 'w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center';
    iconEl.querySelector('svg').setAttribute('class', 'w-5 h-5 text-red-600');
    if (rowEl) rowEl.className = 'p-4 bg-red-50 rounded-lg border border-red-200 transition-all';
    if (helpEl) helpEl.classList.remove('hidden');
  }
  if (info) infoEl.textContent = info;
}

function setCheckPending(id, info) {
  const statusEl = document.getElementById(id + 'Status');
  const iconEl = document.getElementById(id + 'Icon');
  const infoEl = document.getElementById(id + 'Info');
  const helpEl = document.getElementById(id + 'Help');
  const rowEl = document.getElementById(id + 'Row');

  statusEl.innerHTML = '<span class="text-gray-400 pulse">Checking...</span>';
  iconEl.className = 'w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center';
  iconEl.querySelector('svg').setAttribute('class', 'w-5 h-5 text-gray-500');
  if (rowEl) rowEl.className = 'p-4 bg-gray-50 rounded-lg border transition-all';
  if (helpEl) helpEl.classList.add('hidden');
  if (info) infoEl.textContent = info;
}

function updateSummary() {
  const allDone = Object.values(checksCompleted).every(v => v);
  if (!allDone) return;

  const allPass = Object.values(checkResults).every(v => v);
  const failedCount = Object.values(checkResults).filter(v => !v).length;
  const bar = document.getElementById('summaryBar');
  bar.classList.remove('hidden');

  if (allPass) {
    bar.className = 'mt-5 p-3 rounded-lg text-sm font-medium text-center bg-green-50 border border-green-200 text-green-700';
    bar.textContent = 'All system checks passed. You may proceed.';
    document.getElementById('continueBtn').disabled = false;
  } else {
    bar.className = 'mt-5 p-3 rounded-lg text-sm font-medium text-center bg-amber-50 border border-amber-200 text-amber-700';
    bar.textContent = failedCount + ' check' + (failedCount > 1 ? 's' : '') + ' failed. Please resolve the issues above and retry.';
    document.getElementById('continueBtn').disabled = true;
  }
}

// --- Modal helpers ---

function showModal(title, message, instructions, actionLabel, actionFn) {
  document.getElementById('modalTitle').textContent = title;
  document.getElementById('modalMessage').textContent = message;
  document.getElementById('modalInstructions').innerHTML = instructions;
  document.getElementById('modalActionBtn').textContent = actionLabel;
  currentModalAction = actionFn;
  document.getElementById('permissionModal').classList.remove('hidden');
}

function closeModal() {
  document.getElementById('permissionModal').classList.add('hidden');
  currentModalAction = null;
}

function modalAction() {
  closeModal();
  if (currentModalAction) currentModalAction();
}

// --- Screen Resolution Check ---

function runScreenCheck() {
  setCheckPending('screen', 'Checking...');
  const w = screen.width, h = screen.height;
  const pass = w >= 1024 && h >= 600;
  checkResults.screen = pass;
  checksCompleted.screen = true;
  setCheckStatus('screen', pass, w + 'x' + h + (pass ? ' - OK' : ' - Minimum 1024x600 required'));
  updateSummary();
}

function retryScreenCheck() {
  checksCompleted.screen = false;
  runScreenCheck();
}

// --- Camera Check ---

async function runCameraCheck() {
  setCheckPending('camera', 'Requesting permission...');
  try {
    const stream = await navigator.mediaDevices.getUserMedia({ video: true });
    checkResults.camera = true;
    checksCompleted.camera = true;
    setCheckStatus('camera', true, 'Camera access granted');
    stream.getTracks().forEach(t => t.stop());
  } catch (err) {
    checkResults.camera = false;
    checksCompleted.camera = true;
    const isDenied = err.name === 'NotAllowedError' || err.name === 'PermissionDeniedError';
    const isNotFound = err.name === 'NotFoundError' || err.name === 'DevicesNotFoundError';
    let info = 'Camera permission denied';
    if (isNotFound) info = 'No camera device found';
    setCheckStatus('camera', false, info);
  }
  updateSummary();
}

function retryCameraCheck() {
  checksCompleted.camera = false;
  showModal(
    'Camera Permission Required',
    'Your browser will prompt you to allow camera access. Please click "Allow" when the prompt appears.',
    '<p class="font-medium mb-1">If no prompt appears:</p><ol class="list-decimal list-inside space-y-1"><li>Click the lock/camera icon in the address bar</li><li>Find <strong>Camera</strong> and set to <strong>Allow</strong></li><li>Reload the page if needed</li></ol>',
    'Request Camera Access',
    runCameraCheck
  );
}

// --- Microphone Check ---

async function runMicCheck() {
  setCheckPending('mic', 'Requesting permission...');
  try {
    const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
    checkResults.mic = true;
    checksCompleted.mic = true;
    setCheckStatus('mic', true, 'Microphone access granted');
    stream.getTracks().forEach(t => t.stop());
  } catch (err) {
    checkResults.mic = false;
    checksCompleted.mic = true;
    const isNotFound = err.name === 'NotFoundError' || err.name === 'DevicesNotFoundError';
    let info = 'Microphone permission denied';
    if (isNotFound) info = 'No microphone device found';
    setCheckStatus('mic', false, info);
  }
  updateSummary();
}

function retryMicCheck() {
  checksCompleted.mic = false;
  showModal(
    'Microphone Permission Required',
    'Your browser will prompt you to allow microphone access. Please click "Allow" when the prompt appears.',
    '<p class="font-medium mb-1">If no prompt appears:</p><ol class="list-decimal list-inside space-y-1"><li>Click the lock/camera icon in the address bar</li><li>Find <strong>Microphone</strong> and set to <strong>Allow</strong></li><li>Reload the page if needed</li></ol>',
    'Request Microphone Access',
    runMicCheck
  );
}

// --- Speaker Check ---

function runSpeakerCheck() {
  setCheckPending('speaker', 'Checking audio output...');
  try {
    const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
    const pass = !!audioCtx;
    checkResults.speaker = pass;
    checksCompleted.speaker = true;
    setCheckStatus('speaker', pass, pass ? 'Audio output available' : 'No audio output detected');
    audioCtx.close();
  } catch (err) {
    checkResults.speaker = false;
    checksCompleted.speaker = true;
    setCheckStatus('speaker', false, 'Audio output not available');
  }
  updateSummary();
}

function retrySpeakerCheck() {
  checksCompleted.speaker = false;
  runSpeakerCheck();
}

// --- Run all checks on load ---

runScreenCheck();
runCameraCheck();
runMicCheck();
runSpeakerCheck();

// --- Continue to next phase ---

async function proceedToAVCheck() {
  const btn = document.getElementById('continueBtn');
  btn.disabled = true;
  btn.textContent = 'Please wait...';

  try {
    const res = await fetch('/exam/compatibility-done', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        browser_info: navigator.userAgent.substring(0, 200),
        screen_resolution: screen.width + 'x' + screen.height
      })
    });
    const data = await res.json();
    if (data.success) {
      window.location.href = data.redirect;
    } else {
      btn.disabled = false;
      btn.textContent = 'Continue to Audio/Video Verification';
    }
  } catch (err) {
    btn.disabled = false;
    btn.textContent = 'Continue to Audio/Video Verification';
  }
}
</script>

