<%- include('../partials/head', { title: 'Exam Result' }) %>

<div class="min-h-screen bg-gray-50 flex items-center justify-center p-4">
  <div class="bg-white rounded-2xl shadow-xl w-full max-w-lg p-8 fade-in text-center">
    <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
      <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>

    <h1 class="text-2xl font-bold text-gray-800 mb-2">Exam Submitted Successfully</h1>
    <p class="text-gray-500 mb-6"><%= session.exam_title %></p>

    <div class="bg-gray-50 rounded-xl p-6 mb-6 text-left space-y-3">
      <div class="flex justify-between">
        <span class="text-gray-600">Status</span>
        <span class="font-semibold text-green-600"><%= session.status === 'auto_submitted' ? 'Auto-Submitted' : 'Submitted' %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">Total Questions</span>
        <span class="font-semibold"><%= session.total_questions %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">Questions Answered</span>
        <span class="font-semibold"><%= session.total_answered || 0 %></span>
      </div>
      <% if (session.score !== null && session.score !== undefined) { %>
      <div class="flex justify-between">
        <span class="text-gray-600">Score</span>
        <span class="font-semibold text-indigo-600"><%= session.score %></span>
      </div>
      <% } %>
      <div class="flex justify-between">
        <span class="text-gray-600">Integrity Score</span>
        <span class="font-semibold <%= session.confidence_score >= 80 ? 'text-green-600' : session.confidence_score >= 50 ? 'text-yellow-600' : 'text-red-600' %>">
          <%= session.confidence_score ? Number(session.confidence_score).toFixed(0) : 100 %>%
        </span>
      </div>
    </div>

    <div class="bg-blue-50 border border-blue-200 rounded-lg p-3 mb-6 text-sm text-blue-700">
      Your submission has been recorded and will be reviewed by the examination committee. Results will be communicated through the portal.
    </div>

    <a href="/dashboard" class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white rounded-lg font-semibold hover:bg-indigo-700 transition">
      Back to Dashboard
    </a>
  </div>
</div>

<%- include('../partials/footer') %>
