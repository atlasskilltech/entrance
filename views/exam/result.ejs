<%- include('../partials/head', { title: 'Exam Result' }) %>

<div class="min-h-screen flex items-center justify-center p-4">
  <div class="bg-[var(--card)] rounded-2xl shadow-2xl border border-[var(--card-border)] w-full max-w-lg p-8 fade-in text-center">
    <div class="w-20 h-20 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center mx-auto mb-6">
      <svg class="w-10 h-10 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>

    <h1 class="text-2xl font-bold text-surface-900 dark:text-surface-50 mb-2">Exam Submitted Successfully</h1>
    <p class="text-surface-500 dark:text-surface-400 mb-6"><%= session.exam_title %></p>

    <div class="bg-surface-50 dark:bg-surface-800 rounded-2xl p-6 mb-6 text-left space-y-3">
      <div class="flex justify-between">
        <span class="text-surface-600 dark:text-surface-400">Status</span>
        <span class="font-semibold text-green-600 dark:text-green-400"><%= session.status === 'auto_submitted' ? 'Auto-Submitted' : 'Submitted' %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-surface-600 dark:text-surface-400">Total Questions</span>
        <span class="font-semibold text-surface-900 dark:text-surface-100"><%= session.total_questions %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-surface-600 dark:text-surface-400">Questions Answered</span>
        <span class="font-semibold text-surface-900 dark:text-surface-100"><%= session.total_answered || 0 %></span>
      </div>
      <% if (session.score !== null && session.score !== undefined) { %>
      <div class="flex justify-between">
        <span class="text-surface-600 dark:text-surface-400">Score</span>
        <span class="font-semibold text-primary-600 dark:text-primary-400"><%= session.score %></span>
      </div>
      <% } %>
      <div class="flex justify-between">
        <span class="text-surface-600 dark:text-surface-400">Integrity Score</span>
        <span class="font-semibold <%= session.confidence_score >= 80 ? 'text-green-600 dark:text-green-400' : session.confidence_score >= 50 ? 'text-amber-600 dark:text-amber-400' : 'text-red-600 dark:text-red-400' %>">
          <%= session.confidence_score ? Number(session.confidence_score).toFixed(0) : 100 %>%
        </span>
      </div>
    </div>

    <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-xl p-3 mb-6 text-sm text-blue-700 dark:text-blue-400">
      Your submission has been recorded and will be reviewed by the examination committee. Results will be communicated through the portal.
    </div>

    <a href="/dashboard" class="inline-flex items-center px-6 py-3 bg-primary-600 dark:bg-primary-500 text-white rounded-xl font-semibold hover:bg-primary-700 dark:hover:bg-primary-600 transition">
      Back to Dashboard
    </a>
  </div>
</div>

<%- include('../partials/footer') %>
