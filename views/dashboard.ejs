<%- include('partials/head', { title: 'Dashboard - Entrance Exam' }) %>

<div class="min-h-screen">
  <!-- Header -->
  <nav class="bg-[var(--card)] shadow-sm border-b border-[var(--card-border)] sticky top-0 z-30">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-3 flex items-center justify-between">
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-gradient-to-br from-primary-700 to-primary-900 rounded-xl flex items-center justify-center shadow-md">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
        </div>
        <div>
          <h1 class="font-bold text-surface-900 dark:text-surface-50">Examination Portal</h1>
          <p class="text-xs text-surface-500 dark:text-surface-400">Application ID: <%= applicationId %></p>
        </div>
      </div>
      <div class="flex items-center space-x-3">
        <span class="text-sm text-surface-600 dark:text-surface-400 hidden sm:inline">Welcome, <strong class="text-surface-900 dark:text-surface-100"><%= studentName %></strong></span>
        <button onclick="toggleTheme()" class="p-2 text-surface-400 hover:text-surface-600 dark:hover:text-surface-300 transition cursor-pointer rounded-lg hover:bg-surface-100 dark:hover:bg-surface-800" title="Toggle theme">
          <svg class="w-4 h-4 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
          <svg class="w-4 h-4 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/></svg>
        </button>
        <a href="/logout" class="text-sm text-red-500 hover:text-red-600 font-medium">Logout</a>
      </div>
    </div>
  </nav>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-8">
    <h2 class="text-xl font-bold text-surface-900 dark:text-surface-50 mb-6">Available Examinations</h2>

    <% if (exams.length === 0) { %>
      <div class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] p-8 text-center">
        <p class="text-surface-500 dark:text-surface-400">No examinations available at this time.</p>
      </div>
    <% } else { %>
      <div class="grid gap-4 sm:gap-6">
        <% exams.forEach(exam => { %>
          <% const completedSession = sessions.find(s => s.exam_id === exam.id && (s.status === 'submitted' || s.status === 'auto_submitted' || s.status === 'disqualified')); %>
          <div class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] p-5 sm:p-6 hover:shadow-md transition fade-in">
            <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
              <div class="flex-1">
                <h3 class="text-lg font-bold text-surface-900 dark:text-surface-50"><%= exam.title %></h3>
                <p class="text-surface-500 dark:text-surface-400 mt-1 text-sm"><%= exam.description %></p>
                <div class="flex items-center flex-wrap gap-3 mt-3 text-sm text-surface-600 dark:text-surface-400">
                  <span class="flex items-center space-x-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                    <span><%= exam.duration_minutes %> minutes</span>
                  </span>
                  <span class="flex items-center space-x-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
                    <span><%= exam.total_questions %> Questions</span>
                  </span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-accent-50 dark:bg-accent-900/30 text-accent-700 dark:text-accent-400 border border-accent-200 dark:border-accent-800">Proctored</span>
                </div>
              </div>
              <div class="sm:ml-4">
                <% if (completedSession) { %>
                  <span class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-semibold <%= completedSession.status === 'disqualified' ? 'bg-red-50 dark:bg-red-900/20 text-red-700 dark:text-red-400 border border-red-200 dark:border-red-800' : 'bg-surface-100 dark:bg-surface-800 text-surface-600 dark:text-surface-400 border border-surface-200 dark:border-surface-700' %>">
                    <%= completedSession.status === 'disqualified' ? 'Disqualified' : 'Completed' %>
                  </span>
                <% } else { %>
                  <a href="/exam/<%= exam.id %>/start"
                     class="inline-flex items-center px-5 py-2.5 bg-accent-500 text-white rounded-xl font-semibold text-sm hover:bg-accent-600 transition shadow-lg shadow-accent-500/25 hover:shadow-accent-500/40">
                    Start Online Challenge
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
                  </a>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

    <% if (sessions.length > 0) { %>
      <h2 class="text-xl font-bold text-surface-900 dark:text-surface-50 mt-10 mb-4">Exam History</h2>
      <div class="bg-[var(--card)] rounded-2xl shadow-sm border border-[var(--card-border)] overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead class="bg-surface-50 dark:bg-surface-800/50">
              <tr>
                <th class="px-4 py-3 text-left font-semibold text-surface-600 dark:text-surface-400">Session</th>
                <th class="px-4 py-3 text-left font-semibold text-surface-600 dark:text-surface-400">Status</th>
                <th class="px-4 py-3 text-left font-semibold text-surface-600 dark:text-surface-400">Date</th>
                <th class="px-4 py-3 text-left font-semibold text-surface-600 dark:text-surface-400">Action</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-surface-100 dark:divide-surface-800">
              <% sessions.forEach(s => { %>
                <tr class="hover:bg-surface-50 dark:hover:bg-surface-800/30 transition">
                  <td class="px-4 py-3 text-surface-900 dark:text-surface-100">#<%= s.id %></td>
                  <td class="px-4 py-3">
                    <span class="inline-flex px-2.5 py-0.5 rounded-full text-xs font-semibold
                      <%= s.status === 'submitted' || s.status === 'auto_submitted' ? 'bg-green-50 dark:bg-green-900/20 text-green-700 dark:text-green-400 border border-green-200 dark:border-green-800' :
                         s.status === 'in_progress' ? 'bg-amber-50 dark:bg-amber-900/20 text-amber-700 dark:text-amber-400 border border-amber-200 dark:border-amber-800' :
                         s.status === 'disqualified' ? 'bg-red-50 dark:bg-red-900/20 text-red-700 dark:text-red-400 border border-red-200 dark:border-red-800' : 'bg-surface-100 dark:bg-surface-800 text-surface-600 dark:text-surface-400' %>">
                      <%= s.status.replace('_', ' ') %>
                    </span>
                  </td>
                  <td class="px-4 py-3 text-surface-500 dark:text-surface-400"><%= new Date(s.created_at).toLocaleDateString() %></td>
                  <td class="px-4 py-3">
                    <% if (s.status === 'submitted' || s.status === 'auto_submitted') { %>
                      <a href="/exam/result/<%= s.id %>" class="text-primary-500 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 text-sm font-medium">View Result</a>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
